<%- include('layout/header') %>



<div class="continer">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert" style="background-color: #f8d7da; color: #721c24; border-color: #f5c6cb;">
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong>
          <%= message.message %>
        </strong>
      </div>
      <% } %>

      <div class="table-responsive">
        <% if (users !=""){ %>
        <table class="table table-striped text-center my-3 ">
          <thread>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>E-Mail</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thread>
          <tbody>
            <% users.forEach((row,index)=> { %>
            <tr class="align-middle">
              <td><%= index  %></td>
              <td><img src="<%= row.image  %>" width="50" class="img-thumbnail"  alt=""></td>
              <td><%= row.name  %></td>
              <td><%= row.email  %></td>
              <td><%= row.phone %></td>
              <td>
                <a href="/edit/<%= row.id %>" class="text-success"><i class="fas fa-edit  fa-lg mx-1"></i></a>
                <a href="/delete/<%= row.id %>" class="text-danger"><i class="fas  fa-trash fa-lg mx-1"></i></a>
              </td>
            </tr>

            <% }) %>

          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-centre text-secondary mt-5"> No Users Found in the Database! </h1>
        <% } %>
      </div>
    </div>
  </div>
  
</div>




<%- include('layout/footer') %>